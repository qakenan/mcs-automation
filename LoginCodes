using System;
using System.IO;
using System.Reflection;
using Microsoft.VisualStudio.TestTools.UnitTesting;
using OpenQA.Selenium.Chrome;
using OpenQA.Selenium;

namespace Demo
{
    [TestClass]
    public class TestLogin
    {
        [TestMethod]
        public void LoadLogInPage()
        {
            var driver = new ChromeDriver();
            driver.Navigate().GoToUrl("https://login.mercola.com/login.aspx?ReturnURL=&Email=");
            driver.Quit();
        }

        [TestMethod]
        public void ValidUser()
        {
            var driver = new ChromeDriver();
            driver.Navigate().GoToUrl("https://login.mercola.com/login.aspx?ReturnURL=&Email=");
            //find the field for ther user name
            var user = driver.FindElement(By.Id("ctl00_ContentPlaceHolder1_UserName"));
            user.SendKeys("kenantest@yahoo.com");

            //find the field for the password
            var pass = driver.FindElement(By.Id("ctl00_ContentPlaceHolder1_Password"));
            pass.SendKeys("kenan123");
            driver.FindElement(By.Id("ctl00_ContentPlaceHolder1_LoginButton")).Click();
           // var loggedInHeader = driver.FindElement(By.Id("profile-menu"));
            //Assert.IsTrue(loggedInHeader.Displayed, "The user was not able to successfully login.");
           // driver.Quit();
            
        }
    }
}
